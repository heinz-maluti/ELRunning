@model IEnumerable<ELRunning.Models.ActivityLog>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeLogged)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TimeLogged)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Units)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActivityLogID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActivityLogID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActivityLogID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
